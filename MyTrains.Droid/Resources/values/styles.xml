<resources>
  
  <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
  </style>
  
  <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
		<item name="android:fontFamily">sans-serif-light</item>
   
  </style>
  <style name="XamarinCRMTheme.Base" parent="@android:style/Theme.Holo.Light">
  </style>
  <style name="XamarinCRMTheme" parent="XamarinCRMTheme.Base">
    <item name="android:actionBarStyle">@style/XamarinCRMTheme.ActionBarStyle</item>
  </style>
  <style name="XamarinCRMTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:titleTextStyle">@style/XamarinCRMTheme.ActionBar.TitleTextStyle</item>
    <item name="android:background">@color/primary</item>
  </style>
  <style name="XamarinCRMTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>
</resources>